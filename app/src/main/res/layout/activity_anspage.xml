<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".anspage">
    <LinearLayout
        android:id="@+id/ansPageLL"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<TextView
    android:id="@+id/anspage_TITLE"
    android:layout_width="match_parent"
    android:textSize="30sp"
    android:background="#F5E453"
    android:layout_height="wrap_content"
/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <TextView
        android:id="@+id/anspage_Outof"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="30sp"
        android:background="#53F5C7"
        android:layout_below="@+id/anspage_TITLE"
        android:layout_height="wrap_content"
        />
            <TextView
                android:id="@+id/anspage_Avg_Timw"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:background="#DA513F"
                android:layout_below="@+id/anspage_TITLE"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/anspage_qno"
        android:layout_below="@+id/ansPageLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>